<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Watlinks" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Watlinks" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">

    <% if user_signed_in? %>
      <div class="container">
        <div class="row-fluid">
          <div class="span12">
            <div class="page-header">
              <a class="pull-right hidden-desktop" data-toggle="collapse" data-target="#mobileNav"><i class="icon-list"></i></a>
              <h1>
                Watlinks <small>because nolinks is ugly </small>
              </h1>
            </div>
          </div>
        </div>
        <div class="row-fluid">
          <div class="span2">

            <div class="hidden-desktop collapse" id="mobileNav">
              <%= render 'layouts/navlist' %>
            </div>

            <div class="hidden-phone hidden-tablet" %>
              <%= render 'layouts/navlist' %>
            </div>

          </div>
          <div class="span9">
            <%= yield %>
          <footer>
            <br><br><br>
          </footer>
          </div>
        </div>
      </div>


    <% else %>
<!-- You'll find no secrets here. -->
<div class="navbar navbar-fixed-top">
<nav class="navbar-inner">
<div class="container">
<%= render 'layouts/login' %>
</div>
</nav>
</div>
<div id="main" role="main">
<div class="container">
<%= yield %>

</div>
</div>

    <% end %>
    
  </body>
</html>
