<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, :class => "span12" %>
    <%= f.text_area :description, :class => "span12" %>
    <%= f.input :link %>
    <%= f.input :score %>
    <%= f.input :user %>
    <%= f.input :board %>
    <%= f.input :category %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
